('r', 'g', 'b')\n","    for i, cor in enumerate(cores):\n","        hist = cv2.calcHist([imagem_rgb], [i], None, [256], [0, 256])\n","        plt.plot(hist, color=cor)\n","        plt.xlim([0, 256])\n","\n","    # Exibe o histograma\n","    plt.show()\n","\n","# Função para calcular e exibir o histograma de uma imagem em preto e branco\n","def exibir_histograma_pb(imagem_gray):\n","    # Cria uma figura para exibir o histograma\n","    plt.figure()\n","    plt.title(\"Histograma - Imagem Preto e Branco\")\n","    plt.xlabel(\"Intensidade de Pixel\")\n","    plt.ylabel(\"Número de Pixels\")\n","\n","    # Calcula o histograma\n","    hist = cv2.calcHist([imagem_gray], [0], None, [256], [0, 256])\n","    plt.plot(hist, color='k')  # Cor preta para o gráfico\n","    plt.xlim([0, 256])\n","\n","    # Exibe o histograma\n","    plt.show()\n","\n","# Chama as funções para exibir os histogramas\n","exibir_histograma_colorido(imagem_colorida_rgb)\n","exibir_histograma_pb(imagem_pb)\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/","height":1000,"output_embedded_package_id":"1C3JtDWqe9UPXYQf4ALPf3FP4sHPJomeM"},"id":"Uj5BwOivMMdJ","executionInfo":{"status":"ok","timestamp":1734616442229,"user_tz":180,"elapsed":5984,"user":{"displayName":"Juliano Gregório","userId":"12355758592778727930"}},"outputId":"4d85f2ee-3343-425c-dc98-a986254c99f0"},"execution_count":null,"outputs":[{"output_type":"display_data","data":{"text/plain":"Output hidden; open in https://colab.research.google.com to view."},"metadata":{}}]}]}